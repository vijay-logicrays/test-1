<?xml version="1.0"?>
<config>
    <modules>
        <Hwg_Banner>
            <version>0.1.0</version>
        </Hwg_Banner>
    </modules>
    <frontend>
        <routers>
            <banner>
                <use>standard</use>
                <args>
                    <module>Hwg_Banner</module>
                    <frontName>banner</frontName>
                </args>
            </banner>
        </routers>
        <layout>
            <updates>
                <banner>
                    <file>banner/banner.xml</file>
                </banner>
            </updates>
        </layout>
    </frontend>
    <admin>
		<routers>
			<adminhtml>
				<args>
					<modules>
						<Hwg_Banner after="Mage_Adminhtml">Hwg_Banner_Adminhtml</Hwg_Banner>
					</modules>
				</args>
			</adminhtml>
		</routers>
    </admin>
    <adminhtml>
		<menu>
			<banner module="banner">
				<title>Banners</title>
				<sort_order>71</sort_order>               
				<children>
					<items module="banner">
						<title>Manage Banner</title>
						<sort_order>0</sort_order>
						<action>adminhtml/banner_banner</action>
					</items>
					<image module="banner">
						<title>Manage Banner Images</title>
						<sort_order>1</sort_order>
						<action>adminhtml/banner_image</action>
					</image>
				</children>
			</banner>
		</menu>
		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
						<Hwg_Banner>
							<title>Banner Module</title>
							<sort_order>10</sort_order>
						</Hwg_Banner>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <banner>
                                            <title>Store banner Module Section</title>
                                        </banner>
                                    </children>
                                </config>
                            </children>
                        </system>						
					</children>
				</admin>
			</resources>
		</acl>
		<layout>
			<updates>
				<banner>
					<file>banner/banner.xml</file>
				</banner>
			</updates>
		</layout>
    </adminhtml>   
    <global>
        <models>
            <banner>
                <class>Hwg_Banner_Model</class>
                <resourceModel>banner_mysql4</resourceModel>
            </banner>
            <banner_mysql4>
                <class>Hwg_Banner_Model_Mysql4</class>
                <entities>
                    <banner>
                        <table>banner</table>
                    </banner>
                    <image>
                        <table>banner_image</table>
                    </image>					
                </entities>
            </banner_mysql4>
        </models>
        <resources>
            <banner_setup>
                <setup>
                    <module>Hwg_Banner</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </banner_setup>
            <banner_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </banner_write>
            <banner_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </banner_read>
        </resources>
        <blocks>
            <banner>
                <class>Hwg_Banner_Block</class>
            </banner>
        </blocks>
        <helpers>
            <banner>
                <class>Hwg_Banner_Helper</class>
            </banner>
        </helpers>
    </global>
	<default>
        <banner>
            <general>
                <enabled>1</enabled>
            </general>
			<slider>
                <activejs>1</activejs>
				<pager>1</pager>
				<controls>1</controls>
				<captions>1</captions>
            </slider>
        </banner>
    </default>
</config>