<?xml version="1.0"?>
<config>
	<tabs>
		<hwg translate="label" module="banner">
			<label>HWG</label>
			<sort_order>999</sort_order>
		</hwg>
	</tabs>
	<sections>
		<banner translate="label" module="banner">
			<label>Banner</label>
			<tab>hwg</tab>
			<frontend_type>text</frontend_type>
            <sort_order>10</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store> 
			<groups>
				<general translate="label" module="banner">
					<label>General</label>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<sort_order>10</sort_order>
					<fields>
						<enabled translate="label comment">
							<label>Enabled</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
						</enabled>
					</fields>	
				</general>
				<slider translate="label" module="banner">
					<label>Slider Setting</label>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<sort_order>20</sort_order>
					<fields>
						<activejs translate="label comment">
							<label>Active Javascript for Slider</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
							<comment>If already included bxslider js then false otherwise true.</comment>
						</activejs>
						<pager translate="label comment">
							<label>Display Pager</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
							<comment>If true, a pager will be added.</comment>
						</pager>
						<controls translate="label comment">
							<label>Display Controls</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
							<comment>If true, Next/Prev controls will be added.</comment>
						</controls>
						<captions translate="label comment">
							<label>Display Captions</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
							<comment>If true, Display image title bottom of image.</comment>
						</captions>
					</fields>	
				</slider>
			</groups>
		</banner>	
	</sections>
</config>